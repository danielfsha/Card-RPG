{
  "name": "pocker-zk-circuits",
  "version": "1.0.0",
  "description": "Zero-Knowledge circuits for Poker game on Stellar",
  "scripts": {
    "build": "bash build.sh",
    "compile": "circom src/poker_game.circom --r1cs --wasm --sym -o build",
    "compile:commitment": "circom src/card_commitment.circom --r1cs --wasm --sym -o build",
    "compile:reveal": "circom src/card_reveal.circom --r1cs --wasm --sym -o build",
    "compile:ranking": "circom src/hand_ranking.circom --r1cs --wasm --sym -o build",
    "compile:all": "npm run compile:commitment && npm run compile:reveal && npm run compile:ranking && npm run compile",
    "setup": "node scripts/setup.js",
    "test": "node scripts/test.js",
    "generate-proof": "node scripts/generate_proof.js",
    "copy-artifacts": "mkdir -p ../../pocker/public/circuits && cp build/poker_game_js/poker_game.wasm ../../pocker/public/circuits/ && cp poker_game_final.zkey ../../pocker/public/circuits/",
    "info": "snarkjs r1cs info build/poker_game.r1cs",
    "clean": "rm -rf build node_modules *.ptau *.zkey *.sol verification_key.json proof.json"
  },
  "dependencies": {
    "circomlibjs": "^0.1.7",
    "snarkjs": "^0.7.4"
  },
  "devDependencies": {
    "@types/circomlibjs": "^0.1.6",
    "@types/snarkjs": "^0.7.9",
    "circomlib": "^2.0.5"
  }
}
